<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_toolbar_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_arrow_back"
        android:layout_width="@dimen/icon_arrow"
        android:layout_height="@dimen/icon_arrow"
        android:layout_marginStart="@dimen/padding_medium"
        android:alpha="0"
        app:srcCompat="@drawable/ic_left_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_medium"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_subtitle"
        android:fontFamily="@font/helvetica_now_regular"
        app:layout_constraintStart_toEndOf="@id/iv_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="This is title"/>

</androidx.constraintlayout.widget.ConstraintLayout>